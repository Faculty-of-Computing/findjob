# FindJob Environment Configuration
# Copy this file to .env for local development

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here

# Database Configuration (Update for Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@[YOUR_HOST]:5432/postgres

# Supabase Specific (Optional, for advanced features)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# File Upload Configuration
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216

# Session Configuration
SESSION_TYPE=filesystem
SESSION_FILE_DIR=/tmp/flask_sessions

# Logging
LOG_LEVEL=INFO

# Production overrides (set these in Render dashboard or hosting provider)
# FLASK_ENV=production
# FLASK_DEBUG=false
# DATABASE_URL=postgresql://... (for Supabase in production)
# SECRET_KEY=<auto-generated-or-set-manually>
